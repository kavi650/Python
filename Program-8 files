# (i) Open and read a file
file = open("simple.txt", "r")
print(file.read())
file.close()


# (ii) Create and write data to a file
with open("sample.txt", "w") as file:
    file.write("Hello, this is a sample file.\n")
    file.write("Python makes file handling easy and simple!")

print("File created and the content has been written successfully.")


# (iii) Read the data from the file
with open("sample.txt", "r") as file:
    content = file.read()

print("File Content:\n")
print(content)
